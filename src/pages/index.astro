---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const latest = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="home">
			<section class="hero">
				<img
					class="avatar"
					src="https://github.com/ejstover.png?size=200"
					width="120"
					height="120"
					alt="Portrait of Eric Stover"
					loading="lazy"
					decoding="async"
				/>
				<div class="hero-text">
					<h1>Eric Stover</h1>
					<p class="tagline">{SITE_DESCRIPTION}</p>
					<p class="social-links">
						<a
							href="https://www.linkedin.com/in/stovereric"
							target="_blank"
							rel="noreferrer"
						>
							LinkedIn
						</a>
						·
						<a href="https://github.com/ejstover" target="_blank" rel="noreferrer">
							GitHub
						</a>
					</p>
				</div>
			</section>
			<section class="latest">
				<h2 class="latest-title">Latest post</h2>
				{latest ? (
					<div class="latest-card">
						<h3>{latest.data.title}</h3>
						<p class="latest-description">{latest.data.description}</p>
						<a class="latest-link" href={`/blog/${latest.id}/`}>
							Read the latest post →
						</a>
					</div>
				) : (
					<p class="latest-empty">No posts yet.</p>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
<style>
	.home {
		width: 720px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 4rem 0 6rem;
	}
	.hero {
		display: flex;
		align-items: center;
		gap: 2rem;
	}
	.avatar {
		border-radius: 999px;
		border: 1px solid rgba(var(--gray), 0.3);
		box-shadow: var(--box-shadow);
	}
	.hero-text {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	.hero-text h1 {
		margin: 0;
		font-size: 2.5rem;
	}
	.latest {
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(var(--gray), 0.2);
	}
	.latest-title {
		margin: 0 0 1rem;
		font-size: 1.5rem;
	}
	.latest-card {
		display: grid;
		gap: 0.75rem;
	}
	.latest-card h3 {
		margin: 0;
		font-size: 1.75rem;
	}
	.latest-description {
		margin: 0;
		color: rgb(var(--gray-dark));
	}
	.latest-link {
		color: rgb(var(--accent));
		text-decoration: none;
		font-weight: 600;
	}
	.latest-link:hover {
		text-decoration: underline;
	}
	.latest-empty {
		margin: 0;
		color: rgb(var(--gray));
	}
	.tagline {
		margin: 0;
		color: rgb(var(--gray-dark));
	}
	.social-links {
		margin: 0;
		color: rgb(var(--gray));
	}
	.social-links a {
		color: inherit;
		text-decoration: none;
	}
	.social-links a:hover {
		color: rgb(var(--accent));
	}
	@media (max-width: 720px) {
		.home {
			padding: 3rem 0 4rem;
		}
		.hero {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
